<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox maxHeight="400" maxWidth="300" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rwilk.learnenglish.controller.group.GroupViewItemController">

  <Text fx:id="textHeadline" text="">
    <VBox.margin>
      <Insets bottom="1.0" left="5.0" right="5.0" top="1.0" />
    </VBox.margin>
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
  </Text>
  <ListView fx:id="listView" onMouseClicked="#listViewOnMouseClicked" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
    <VBox.margin>
      <Insets bottom="1.0" left="5.0" right="5.0" top="1.0" />
    </VBox.margin>
  </ListView>
  <HBox>
  <TextField fx:id="textFieldLesson" HBox.hgrow="ALWAYS">
    <HBox.margin>
      <Insets bottom="1.0" left="5.0" right="5.0" top="1.0" />
    </HBox.margin>
  </TextField>
    <Button fx:id="buttonSetLesson" onMouseClicked="#buttonSetLessonOnMouseClicked" text="Set Lesson">
      <HBox.margin>
        <Insets bottom="1.0" left="5.0" right="5.0" top="1.0" />
      </HBox.margin>
    </Button>
    <Button fx:id="buttonAddHere" onMouseClicked="#buttonAddHereOnMouseClicked" text="Add here">
      <HBox.margin>
        <Insets bottom="1.0" left="5.0" right="5.0" top="1.0" />
      </HBox.margin>
    </Button>
    <VBox.margin>
      <Insets bottom="10" />
    </VBox.margin>
  </HBox>

</VBox>
