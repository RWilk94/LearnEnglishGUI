<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
  fx:controller="rwilk.learnenglish.controller.course.CourseFormController"
  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

  <HBox>
    <Label minWidth="100" text="Id:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldId" HBox.hgrow="ALWAYS" editable="false">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox>
    <Label minWidth="100" text="EN Name:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldEnName" HBox.hgrow="ALWAYS">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox>
    <Label minWidth="100" text="PL Name:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldPlName" HBox.hgrow="ALWAYS">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox VBox.vgrow="ALWAYS">
    <Label minWidth="100" text="Level">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <ComboBox fx:id="comboBoxLevel" minWidth="200" prefWidth="150.0">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </ComboBox>
  </HBox>

  <HBox alignment="BOTTOM_RIGHT">
    <Button mnemonicParsing="false" text="Clear" onAction="#buttonClearOnAction">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Delete" onAction="#buttonDeleteOnAction">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Button layoutX="210.0" layoutY="10.0" mnemonicParsing="false" text="Edit" onAction="#buttonEditOnAction">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Button layoutX="331.0" layoutY="10.0" mnemonicParsing="false" text="Add" onAction="#buttonAddOnAction">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
  </HBox>

</VBox>
