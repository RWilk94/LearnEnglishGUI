<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
  fx:controller="rwilk.learnenglish.controller.sentence.SentenceFormController"
  prefHeight="400.0" prefWidth="600.0">

  <HBox>
    <Label minWidth="100" text="Id:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldId" editable="false" HBox.hgrow="ALWAYS">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox>
    <Label minWidth="100" text="EN Sentence:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldEnSentence" HBox.hgrow="ALWAYS">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox>
    <Label minWidth="100" text="PL Sentence:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldPlSentence" HBox.hgrow="ALWAYS">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox>
    <Label minWidth="100" text="Word Id:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldWordId" editable="false" HBox.hgrow="ALWAYS">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox alignment="BOTTOM_RIGHT">
    <Button mnemonicParsing="false" onAction="#buttonReplaceOnAction" text="Replace">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Button mnemonicParsing="false" onAction="#buttonRefreshOnAction" text="Refresh">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Button mnemonicParsing="false" onAction="#buttonClearOnAction" text="Clear">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#buttonDeleteOnAction" text="Delete">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Button layoutX="210.0" layoutY="10.0" mnemonicParsing="false" onAction="#buttonEditOnAction" text="Edit">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Button layoutX="331.0" layoutY="10.0" mnemonicParsing="false" onAction="#buttonAddOnAction" text="Add">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <VBox.margin>
      <Insets bottom="10.0"/>
    </VBox.margin>
  </HBox>

</VBox>
